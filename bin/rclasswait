#!/usr/bin/ruby

require 'rsgejob'
require 'rsgehost'
require 'rsgequeues'
require 'time'
require 'date'

jobs    = Rsgejobs.new

xlong = 0
xlongSubmitTotal = 0
long = 0
longSubmitTotal = 0
medium = 0
mediumSubmitTotal = 0
short = 0
shortSubmitTotal = 0

now = Time.now.to_i

jobs.each do |job|
    hr = job.hard_request_list

    if (job.state == "qw")
        if hr.include?('xlong')
            xlong = xlong+1
            xlongSubmitTotal += now.to_i - job.subTime.to_i
        end
        if hr.include?('long')
            long = long+1
            longSubmitTotal += now.to_i - job.subTime.to_i
        end
        if hr.include?('medium')
            medium = medium+1
            mediumSubmitTotal += now.to_i - job.subTime.to_i
        end
        if hr.include?('short')
            short = short+1
            shortSubmitTotal += now.to_i - job.subTime.to_i
        end
    end
end

printf("%-15s %6s\n", "JOB CLASS", "AVG WAIT")
puts "------------------------"
printf("%-15s %6.2fh\n", "xlong", xlong > 0 ? (xlongSubmitTotal/xlong).to_f/3600.to_f : 0)
printf("%-15s %6.2fh\n", "long", long > 0 ? (longSubmitTotal/long).to_f/3600.to_f : 0)
printf("%-15s %6.2fh\n", "medium", medium > 0 ? (mediumSubmitTotal/medium).to_f/3600.to_f : 0)
printf("%-15s %6.2fh\n", "short", short > 0 ? (shortSubmitTotal/short).to_f/3600.to_f : 0)
